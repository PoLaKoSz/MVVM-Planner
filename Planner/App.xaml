<Application x:Class="Planner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Planner"
             StartupUri="MainWindow.xaml"
             >
    <Application.Resources>
        
        <!--#region Brushes-->
        <LinearGradientBrush x:Key="Gradient" StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="#928DAB" Offset="0"/>
            <GradientStop Color="#d7d2cc" Offset="1" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="BackGroundGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#3598DB" Offset="0" />
            <GradientStop Color="#2DCC70" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="Turquoise" Color="#1BBC9B"></SolidColorBrush>
        <SolidColorBrush x:Key="GreenSea" Color="#16A086"></SolidColorBrush>
        <SolidColorBrush x:Key="SunFlower" Color="#F1C40F"></SolidColorBrush>
        <SolidColorBrush x:Key="Orange" Color="#F39C11"></SolidColorBrush>
        <SolidColorBrush x:Key="Emerald" Color="#2DCC70"></SolidColorBrush>
        <SolidColorBrush x:Key="Nephritis" Color="#27AE61"></SolidColorBrush>
        <SolidColorBrush x:Key="Carrot" Color="#E67F22"></SolidColorBrush>
        <SolidColorBrush x:Key="Pumpkin" Color="#D25400"></SolidColorBrush>
        <SolidColorBrush x:Key="PeterRiver" Color="#3598DB"></SolidColorBrush>
        <SolidColorBrush x:Key="BelizeHole" Color="#297FB8"></SolidColorBrush>
        <SolidColorBrush x:Key="Alizarin" Color="#E84C3D"></SolidColorBrush>
        <SolidColorBrush x:Key="PomeGranate" Color="#C1392B"></SolidColorBrush>
        <SolidColorBrush x:Key="Amethyst" Color="#9A59B5"></SolidColorBrush>
        <SolidColorBrush x:Key="Wisteria" Color="#8D44AD"></SolidColorBrush>
        <SolidColorBrush x:Key="Clouds" Color="#ECF0F1"></SolidColorBrush>
        <SolidColorBrush x:Key="Silver" Color="#BEC3C7"></SolidColorBrush>
        <SolidColorBrush x:Key="WetAsphalt" Color="#34495E"></SolidColorBrush>
        <SolidColorBrush x:Key="MidNightBlue" Color="#2D3E50"></SolidColorBrush>
        <SolidColorBrush x:Key="Concrete" Color="#95A5A5"></SolidColorBrush>
        <SolidColorBrush x:Key="Asbestos" Color="#7E8C8D"></SolidColorBrush>
        <!--#endregion-->

        <BooleanToVisibilityConverter x:Key="BoolConverter"/><!--Boolean Converter-->

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Width" Value="30"></Setter>
            <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="{StaticResource Asbestos}"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PomeGranate}"></Setter>
                    <Setter Property="Cursor" Value="Hand"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style> <!--MinimizeExit Style-->

        <Style x:Key="ButtonStyle2" TargetType="Button">
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="Width" Value="30"></Setter>
            <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="{StaticResource Clouds}"></Setter>
        </Style> <!--AddFolderStyle-->

        <Style x:Key="EnterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackGroundGradient}"></Setter>
            <Setter Property="VerticalAlignment" Value="Bottom"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="{StaticResource Clouds}"></Setter>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Cursor" Value="Hand"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Grid x:Key="ExitIcon">
            <Viewbox Stretch="Fill">
                <Path  Data="M16,4C9.3828,4,4,9.3833,4,16s5.3828,12,12,12s12-5.3833,12-12S22.6172,4,16,4z M16,26c-5.5137,
                                  0-10-4.4858-10-10   S10.4863,6,16,6s10,4.4858,10,10S21.5137,26,16,26z M20.707,12.707L17.4141,16l3.293,3.293c0.3906,0.3906,0.3906,
                                  1.0234,0,1.4141   C20.5117,20.9023,20.2559,21,20,21s-0.5117-0.0977-0.707-0.293L16,17.4141l-3.293,3.293C12.5117,20.9023,12.2559,21,12,21   
                                  s-0.5117-0.0977-0.707-0.293c-0.3906-0.3906-0.3906-1.0234,0-1.4141L14.5859,16l-3.293-3.293   c-0.3906-0.3906-0.3906-1.0234,
                                  0-1.4141s1.0234-0.3906,
                                  1.4141,0L16,14.5859l3.293-3.293c0.3906-0.3906,1.0234-0.3906,1.4141,0   S21.0977,12.3164,20.707,12.707z"  Stretch="Fill"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}">
                </Path>
            </Viewbox>
        </Grid>
        
        <Grid x:Key="EnterIcon">
            <Viewbox Stretch="Fill">
                <Path  Data="m27,2a2,2 0 0 0 -2,2l0,11c0,2.73 -1.27,4 -4,4l-12.08,0l2,-1l2.57,-2.57a2,2 0 0 0 -2.83,-2.83l-7,7a2,
                       2 0 0 0 0,2.83l7,7a2,2 0 0 0 2.83,-2.83l-2.7,-2.6l-1.94,-1l12.15,0c4.93,0 8,-3.07 8,-8l0,-11a2,2 0 0 0 -2,-2z"  Stretch="Fill"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}">
                </Path>
            </Viewbox>
        </Grid>
        
        <Grid x:Key="MinimizeIcon">
            <Viewbox Stretch="Fill">
                <Path  Data="M14 22v4h20v-4h-20zm10-18c-11.05 0-20 8.95-20 20s8.95 20 20 20 20-8.95 20-20-8.95-20-20-20zm0 
                       36c-8.82 0-16-7.18-16-16s7.18-16 16-16 16 7.18 16 16-7.18 16-16 16z"  Stretch="Fill"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}">
                </Path>
            </Viewbox>
        </Grid>

        <Grid x:Key="AddIcon" Height="20" Width="20">
            <Viewbox Stretch="Fill">
                <Path  Data="M15,6h-5V1c0-0.55-0.45-1-1-1H7C6.45,0,6,0.45,6,1v5H1C0.45,6,0,6.45,0,7v2c0,0.55,0.45,1,1,1h5v5c0,0.55,0.45,1,1,1h2  
                       c0.55,0,1-0.45,1-1v-5h5c0.55,0,1-0.45,1-1V7C16,6.45,15.55,6,15,6z"  Stretch="Fill"
                              Fill="{Binding Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}">
                </Path>
            </Viewbox>
        </Grid>
        
        <ControlTemplate x:Key="MainData">
            <Border x:Name="MainBorder" Background="Transparent" Height="50" Cursor="Hand" BorderThickness="0" Margin="-5 -1 0 0" Width="215">
                <Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="1" Foreground="{StaticResource Clouds}" HorizontalAlignment="Left" VerticalAlignment="Center" Content="{Binding Name}"
                            FontSize="18" FontWeight="Bold" Name="FoldersName"></Label>
                        <Grid x:Name="SelectedGrid" Grid.Column="0" Background="{StaticResource Emerald}" Visibility="{Binding Selected, Converter={StaticResource BoolConverter}}">
                            <Grid.Effect>
                                <DropShadowEffect BlurRadius="15" Direction="0" ShadowDepth="3" RenderingBias="Quality" Opacity="0.2"></DropShadowEffect>
                            </Grid.Effect>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="MainBorder" Property="Background" Value="#928DAB"></Setter>
                </Trigger>
                <DataTrigger Binding="{Binding Selected}" Value="True">
                    <Setter TargetName="FoldersName" Property="Label.FontStyle" Value="Italic"></Setter>
                    <Setter TargetName="MainBorder" Property="Background" Value="#928DAB"></Setter>
                </DataTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="TaskData">
            <Grid HorizontalAlignment="Stretch">
                <Border x:Name="ItemBorder" BorderThickness="1" BorderBrush="{StaticResource Asbestos}" Height="50"
                        Margin="20 10 20 0" HorizontalAlignment="Stretch" Background="{StaticResource Clouds}"
                        CornerRadius="20 20 20 20">
                    <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Direction="270" ShadowDepth="1" RenderingBias="Quality" Opacity="0.3"></DropShadowEffect>
                </Border.Effect>
                <Grid>
                    <Label Content="{Binding ToDo}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5 0 0 0"></Label>
                <Line x:Name="Underline" StrokeThickness="3" X1="0" X2="555"
                     Stretch="Fill" StrokeEndLineCap="Square" StrokeStartLineCap="Square" Stroke="Transparent" >
                </Line>
                </Grid>
                </Border>
            </Grid>
        </ControlTemplate>

        <Style TargetType="{x:Type ListViewItem}" x:Name="SelectedIt">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <!--Don`t know how, but obly this works the way I want -->
                                <Setter Property="IsSelected" Value="True"></Setter>
                            </Trigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Selected}" Value="True"></Condition>
                                </MultiDataTrigger.Conditions>
                                <MultiDataTrigger.Setters>
                                    <Setter Property="IsSelected" Value="True"></Setter>
                                </MultiDataTrigger.Setters>
                            </MultiDataTrigger>
                        </ControlTemplate.Triggers>
                        <Border>
                            <ContentPresenter HorizontalAlignment="Left" 
                                              VerticalAlignment="Center">
                            </ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        
    </Application.Resources>
</Application>
